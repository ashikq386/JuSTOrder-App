                android:padding="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="180dp"
                android:outlineSpotShadowColor="#888888">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:background="@drawable/food2"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/restaurants_holder"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R2"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DETAILS"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="45dp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/r3_details_cardview"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:padding="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="110dp"
                android:outlineSpotShadowColor="#888888">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:background="@drawable/food6"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/restaurants_holder"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R3"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DETAILS"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="45dp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:padding="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="180dp"
                android:outlineSpotShadowColor="#888888">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:background="@drawable/food8"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/restaurants_holder"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R4"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DETAILS"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="45dp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/link_color"
            android:text="TOP  PICKUPS"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/kfc"
                        android:layout_marginLeft="30dp"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/burger_king"
                    android:layout_marginLeft="20dp"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/dominos"
                    android:layout_marginLeft="20dp"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/pizzahut"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/flames_pizzeria"
                    android:layout_marginLeft="30dp"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/oven_story"
                    android:layout_marginLeft="20dp"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/coffee_day"
                    android:layout_marginLeft="20dp"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/mcdonalds"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/link_color"
            android:text="BRANDS"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textStyle="bold"
           />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/shadow10"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="2dp"/>
                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="72.5dp"
                    android:src="@drawable/kadamba_brand"
                    android:layout_marginLeft="-72.5dp"/>
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/shadow10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"/>
                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="72.5dp"
                    android:src="@drawable/empire_brand"
                    android:layout_marginLeft="-72.5dp"/>
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/shadow10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"/>
                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="72.5dp"
                    android:src="@drawable/gillys"
                    android:layout_marginLeft="-72.5dp"/>
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/shadow10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"/>
                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="72.5dp"
                    android:src="@drawable/dbh_brand"
                    android:layout_marginLeft="-72.5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/shadow10"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="2dp"/>
                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="72.5dp"
                    android:src="@drawable/nandhanapalace"
                    android:layout_marginLeft="-72.5dp"/>
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/shadow10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"/>
                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="72.5dp"
                    android:src="@drawable/watsons"
                    android:layout_marginLeft="-72.5dp"/>
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/shadow10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"/>
                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="72.5dp"
                    android:src="@drawable/barley"
                    android:layout_marginLeft="-72.5dp"/>
                <TextView
                    android:layout_width="72dp"
