<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Delivery_ui">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
             android:orientation="horizontal">
            <androidx.appcompat.widget.SearchView
                android:id="@+id/location_search"
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:background="@drawable/shadow6"
                app:iconifiedByDefault="true" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/location_icon_new"/>
           <ImageButton
               android:layout_width="32dp"
               android:layout_height="32dp"
               android:layout_marginLeft="20dp"
               android:background="@drawable/qr_icon"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="402dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shadow6">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPage"
                android:layout_width="250dp"
                android:layout_height="118dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/banner" />
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPage1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="-5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"
                android:background="@drawable/sale_banner" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <SearchView
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:background="@drawable/shadow5"
                android:iconifiedByDefault="true"
                android:layout_marginLeft="15dp"
                 />

            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="1dp"
                android:background="@drawable/shadow5"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"

                    android:background="@drawable/search_icon1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shadow7"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageButton
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/filter_icon" />
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_combo"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:text="COMBO"
                android:textSize="11dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/shadow9"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cuisine"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="CUISINE"
                android:textSize="11dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/shadow9"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="RATINGS"
                android:textSize="11dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/shadow9"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="SAFETY
                            PRECAUTIONS"
                android:textSize="9dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/shadow9"/>
        </LinearLayout>


       <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESTAURANTS"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </LinearLayout>

