<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Treat_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color">
        <ImageButton
            android:id="@+id/ibtn_loginotp_back"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/ic_arrow_back_black_24dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Treat"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:background="@color/white">
        <ImageView
            android:layout_width="360dp"
            android:layout_height="80dp"
            android:background="@drawable/wallet_banner"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="Share coins to your friends"/>
        <TextView
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:background="@color/white"
            android:text="Enter Contact No."
            android:textSize="13dp"
            android:gravity="center"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:background="@color/white"
            android:text="Add Coins"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/white"
           android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"/>
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/coin"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="47dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:background="@drawable/treat"
       />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="Treat your friends"/>
        <TextView
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:text="Name"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:text="Contact No."
            android:textSize="13dp"
            android:gravity="center"
           android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:text="Address"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_marginTop="80dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="445dp"
        android:gravity="center">
        <ImageButton
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/order_treat"
          />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Share Coupon"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:background="@drawable/coupon_box">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="JST00285"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="50% OFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black" />
            </RelativeLayout>
            <ImageButton
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/share_button"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp">
            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:background="@drawable/coupon_box"
                >
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="SDG00651"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="35% OFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp">
            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:background="@drawable/coupon_box"
                >
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="MG05620"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="20% OFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black" />
            </RelativeLayout>
            <ImageButton
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/share_button"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp">
            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:background="@drawable/coupon_box"
                >
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="HB03288"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="60% OFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black" />
            </RelativeLayout>
            <ImageButton
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/share_button"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>