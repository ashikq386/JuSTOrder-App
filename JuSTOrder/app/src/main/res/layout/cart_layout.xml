<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Cart_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color">
        <ImageButton
            android:id="@+id/ibtn_loginotp_back"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_arrow_back_black_24dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="170dp"
            android:textColor="@color/link_color"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Cart"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginTop="45dp"
            android:padding="10dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="-15dp"
            android:layout_alignParentLeft="true">
            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="100dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/delete_icon"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginRight="-5dp"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/chicken_biryani1"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="200dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chicken Biryani"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cart_icon2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="70dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/non_veg_icon" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"

                        android:text="Rs.230 "
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/add_btn"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="70dp"
                        android:background="@drawable/sub"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="30dp">
        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:padding="10dp"
            app:cardCornerRadius="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="-5dp"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/chicken_kabab_biryani"/>
                </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_marginLeft="100dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chicken kabab"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biryani"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cart_icon2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="70dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/non_veg_icon" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"

                        android:text="Rs.230 "
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/add_btn"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="70dp"
                        android:background="@drawable/sub"
                       />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="260dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Add-on"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_cola"
            android:layout_width="105dp"
            android:layout_height="90dp"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="35dp"
            android:outlineSpotShadowColor="#888888">
            <TextView
                android:layout_width="105dp"
                android:layout_height="95dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/cola"/>
            <ImageView
                android:layout_width="225dp"
                android:layout_height="200dp"
                android:layout_marginLeft="-37dp"
                android:layout_marginTop="-28dp"
                android:background="@drawable/food_holder"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:text="Rs.23 "
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"

                    android:layout_marginRight="10dp"
                    android:background="@drawable/add_button"
                    android:text="ADD"
                    android:textColor="@color/white"
                    android:textSize="8dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_coca"
            android:layout_width="105dp"
            android:layout_height="90dp"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_marginLeft="150dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="35dp"
            android:outlineSpotShadowColor="#888888">
            <TextView
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_marginLeft="-5dp"
                android:background="@drawable/coca"
                android:layout_marginTop="-2dp"/>
            <ImageView
                android:layout_width="225dp"
                android:layout_height="200dp"
                android:layout_marginLeft="-37dp"
                android:layout_marginTop="-30dp"
                android:background="@drawable/food_holder"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:text="Rs.23 "
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"

                    android:layout_marginRight="10dp"
                    android:background="@drawable/add_button"
                    android:text="ADD"
                    android:textColor="@color/white"
                    android:textSize="8dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_cola1"
            android:layout_width="105dp"
            android:layout_height="90dp"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_marginLeft="280dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="35dp"
            android:outlineSpotShadowColor="#888888">
            <TextView
                android:layout_width="105dp"
                android:layout_height="90dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/cola"/>
            <ImageView
                android:layout_width="225dp"
                android:layout_height="200dp"
                android:layout_marginLeft="-37dp"
                android:layout_marginTop="-30dp"
                android:background="@drawable/food_holder"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:text="Rs.23 "
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"

                    android:layout_marginRight="10dp"
                    android:background="@drawable/add_button"
                    android:text="ADD"
                    android:textColor="@color/white"
                    android:textSize="8dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="400dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Promo Code"
            android:textSize="15dp"
            android:layout_marginTop="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="0dp"
            android:background="#DDA0DD"
            android:text="BUYNOW"
            android:textColor="@color/white"
            android:textSize="10dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            android:layout_marginTop="5dp"
            android:background="#DDA0DD"
            android:text="SUNSPC30"
            android:textColor="@color/white"
            android:textSize="10dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="115dp"
            android:background="#68205F"
            android:text="FIRSTORD60"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="10dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="260dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="440dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:text="Bill Details"
        android:textSize="15dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bill" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm_your_order"
            android:layout_width="350dp"
            android:layout_height="40dp"

            android:layout_alignParentBottom="true"
            android:text="Confirm your Order "
            android:textSize="22dp"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/shadow14"
            />
    </RelativeLayout>
</FrameLayout>