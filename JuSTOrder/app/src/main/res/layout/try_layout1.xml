<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Combo_Activity">
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="240dp"
        android:background="@drawable/shadow12"
        android:layout_marginTop="30dp">
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:padding="10dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:background="@drawable/res_main"
                android:layout_marginTop="-15dp"/>
            <ImageView
                android:layout_width="310dp"
                android:layout_height="350dp"
                android:layout_marginLeft="-45dp"
                android:layout_marginTop="-90dp"
                android:background="@drawable/food_holder"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/hyderabad_bir_logo"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="78dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:background="@drawable/rating_bar"
                android:layout_marginLeft="0dp"
                android:rotation="180"
                android:layout_marginTop="85dp"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="15dp"
                android:text="[14.9K Reviews]"
                android:textSize="6dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="97dp"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="19dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="HYDERABAD BIRYANI"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:textSize="8dp"
                android:layout_marginTop="48dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:text="(BIRYANI,AUTHENTIC FOOD)"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="10dp"
                android:textSize="9dp"
                android:background="@drawable/dine_in_1"
                android:text="Delivery"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="95dp"
                android:layout_marginLeft="10dp"
                android:textSize="9dp"
                android:background="@drawable/dine_in_1"
                android:text="DINE -IN"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="10dp"
                android:textSize="9dp"
                android:background="@drawable/dine_in_1"
                android:text="TAKEAWAY"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:textSize="9dp"
                android:textAllCaps="false"
                android:background="@drawable/live_tracking"
                android:text="Safer delivery"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="105dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:textSize="9dp"
                android:background="@drawable/live_tracking"
                android:textAllCaps="false"
                android:text="Live Tracking"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="140dp"
                android:background="@drawable/time"/>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:layout_marginTop="155dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/veg_btn"/>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:layout_marginTop="175dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/non_veg_btn"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="170dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/location_icon_new"/>
            <TextView
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:textSize="8dp"
                android:textColor="@color/black"
                android:text="30 Ft Road Hebbal ,Kodegehalli Gate
                              Sahakaranagar,Bangalore 92"/>


        </RelativeLayout>
    </LinearLayout>
</FrameLayout>