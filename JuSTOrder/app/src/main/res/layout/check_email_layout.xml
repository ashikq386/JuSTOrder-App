<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Check_email">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/ibtn_email_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:src="@drawable/email_icom"
            android:layout_marginTop="7dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text=" Check  your  email "
            android:layout_marginTop="7dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text=" To confirm your email address, please tap"
            android:layout_marginTop="7dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="the button in the email we sent to"
            android:layout_marginTop="7dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="l*****5@gmail.com"
            android:layout_marginTop="7dp"
           android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_open_email_app"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Open email app "
            android:textAllCaps="false"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:gravity="center"
           android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/shadow2"/>
        <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"

            android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp">
            <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Resend link"
                android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"

                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Manually enter OTP"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                />
     </RelativeLayout>

    </LinearLayout>
</FrameLayout>