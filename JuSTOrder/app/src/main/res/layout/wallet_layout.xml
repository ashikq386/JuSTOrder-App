<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Wallet_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color">
        <ImageButton
            android:id="@+id/ibtn_loginotp_back"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_arrow_back_black_24dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Wallet"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="65dp"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Balance 8000"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/coin"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:background="@color/white">
        <ImageView
            android:layout_width="360dp"
            android:layout_height="80dp"
          android:background="@drawable/wallet_banner"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        android:background="@color/white">
        <TextView
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="Coins Earned"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:text="800"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/coin"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="55dp"/>
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:background="@drawable/redeem"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:text="Top Up Wallet"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:background="@color/background_color"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Enter Amount ..."
                android:gravity="center"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:background="@color/white"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="35dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Add"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="22dp"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="25"
            android:layout_marginLeft="70dp"
            android:background="@drawable/shadow17"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22dp"/>
        <TextView
           android:layout_width="65dp"
           android:layout_height="50dp"
           android:text="100"
           android:layout_marginLeft="140dp"
           android:background="@drawable/shadow17"
           android:gravity="center"
            android:textColor="@color/white"
           android:textStyle="bold"
           android:textSize="22dp"/>
        <TextView
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:text="500"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:background="@drawable/shadow17"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22dp"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="1000"
            android:layout_alignParentRight="true"
            android:background="@drawable/shadow17"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="22dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="20dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="we hope you will keep your wallet always loaded"
            android:textSize="12dp"
            android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debit From"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="130dp"
            android:background="@color/white"
            android:layout_marginTop="40dp">
            <RelativeLayout
                android:layout_width="330dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/upi_icon"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/ic_down_arrow"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="330dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/card"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:text="xx 5561"
                    android:layout_marginRight="37dp" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/ic_down_arrow"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="330dp"
                android:layout_height="30dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/net"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:text="xxxHDFC"
                    android:layout_marginRight="40dp" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/ic_down_arrow"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="650dp">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shadow14"
        android:layout_marginLeft="50dp"
        android:text="Top Up to Wallet "
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold" />
    </RelativeLayout>

</FrameLayout>